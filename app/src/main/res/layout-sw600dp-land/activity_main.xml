<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#3a3f42"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/valorConta"
        android:layout_width="317dp"
        android:layout_height="167dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="@string/valor_da_conta"
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numPes"
        android:layout_width="303dp"
        android:layout_height="161dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="@string/pessoas"
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <TextView
        android:id="@+id/conta"
        android:layout_width="383dp"
        android:layout_height="211dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:hint="@string/divis_o_da_conta"
        android:text="@string/divis_o_da_conta"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numPes" />

    <ImageButton
        android:id="@+id/speak1"
        android:layout_width="153dp"
        android:layout_height="114dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF5722"
        android:contentDescription="@string/speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conta"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <ImageButton
        android:id="@+id/share2"
        android:layout_width="159dp"
        android:layout_height="124dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="224dp"
        android:backgroundTint="#A60606"
        android:contentDescription="@string/share2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conta"
        app:srcCompat="@android:drawable/ic_menu_share" />

</androidx.constraintlayout.widget.ConstraintLayout>
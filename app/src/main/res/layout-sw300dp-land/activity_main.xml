<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#3a3f42"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/valorConta"
        android:layout_width="251dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/valor_da_conta"
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numPes"
        android:layout_width="221dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/pessoas"
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#FFA60606"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <TextView
        android:id="@+id/conta"
        android:layout_width="221dp"
        android:layout_height="68dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text=" "
        android:textColor="@color/black"
        android:hint="@string/divis_o_da_conta"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numPes" />

    <ImageButton
        android:id="@+id/speak1"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FF5722"
        android:contentDescription="@string/speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conta"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <ImageButton
        android:id="@+id/share2"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#700303"
        android:contentDescription="@string/share2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conta"
        app:srcCompat="@android:drawable/ic_menu_share" />

</androidx.constraintlayout.widget.ConstraintLayout>